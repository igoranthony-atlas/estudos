@model IEnumerable<SalesWebMvc.Entities.SalesRecord>

@{
    ViewData["Title"] = "Lista de Vendas";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nova Venda</a>
</p>

<table class="table table-hover table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Data</th>
            <th>Valor</th>
            <th>Status</th>
            <th>Vendedor</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
    <tr>
        <td>@item.Date.ToString("dd/MM/yyyy")</td>
        <td>@item.Amount.ToString("C")</td>
        <td>@item.Status</td>
        <td>@item.Seller?.Name</td>
        <td>
            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalhes</a>
            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
            <a asp-action="DeleteConfirmed" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
        </td>
    </tr>
}
    </tbody>
</table>
