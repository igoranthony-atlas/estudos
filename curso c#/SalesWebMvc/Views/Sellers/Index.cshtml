@model IEnumerable<SalesWebMvc.Entities.Seller>

@{
    ViewData["Title"] = "Vendedores";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Novo Vendedor</a>
</p>

<table class="table table-hover table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Data de Nascimento</th>
            <th>Salário Base</th>
            <th>Departamento</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
@foreach (var s in Model)
{
    <tr>
        <td>@s.Id</td>
        <td>@s.Name</td>
        <td>@s.Email</td>
        <td>@s.BirthDate.ToString("dd/MM/yyyy")</td>
        <td>@s.BaseSalary.ToString("C")</td>
        <td>@s.Department.Name</td>
        <td>
            <a asp-action="Details" asp-route-id="@s.Id" class="btn btn-sm btn-info">Detalhes</a>
            <a asp-action="Edit" asp-route-id="@s.Id" class="btn btn-sm btn-warning">Editar</a>
            <a asp-action="Delete" asp-route-id="@s.Id" class="btn btn-sm btn-danger">Excluir</a>
        </td>
    </tr>
}
    </tbody>
</table>
